{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Juliet SFT Gen (small)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/data_collections/syth_data_gen/juliet_sft_gen.py",
      "console": "integratedTerminal",
      "args": [
        "--variations", "2",
        "--limit", "2",
        "--size", "small"
      ]
    },
    {
      "name": "Python: LLM API(SERVER)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/llm/server_api.py",
      "console": "integratedTerminal",
      "args": [
        "server"
      ]
    },
    {
      "name": "Python: LLM API(LOCAL)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/llm/server_api.py",
      "console": "integratedTerminal"
    },
    {
        "name": "Python: Streamlit",
        "type": "debugpy",
        "request": "launch",
        "module": "streamlit",
        "console": "integratedTerminal",
        "args": [
            "run",
            "${file}",
            "--server.port",
            "9000" // Or any desired port
        ],
        "justMyCode": true // Optional: Set to false to debug into Streamlit source
    }
  ]
}
